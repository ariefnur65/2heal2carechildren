<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ident_masalah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="id.co.blogspot.blogmozink.a2heal2carechildren.IdentMasalah">


    <TextView
        android:text="@string/tahapGejala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView3"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="5dp">

                <TextView
                    android:text="1"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/satu"
                    android:layout_weight="0.03"
                    android:fontFamily="sans-serif"
                    android:textSize="66sp"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimary"
                    />

                <ImageButton
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_menu_send"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/satuClick"
                    android:layout_alignParentBottom="true"
                    android:layout_width="70dp" />

                <TextView
                    android:text="@string/tahap1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textSatu"
                    android:layout_weight="0.03"
                    android:textSize="36sp"
                    android:background="@color/colorPrimary"
                    android:lineSpacingExtra="8sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/satu"
                    android:layout_toEndOf="@+id/satu" />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="5dp">

                <TextView
                    android:text="2"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/dua"
                    android:layout_weight="0.03"
                    android:fontFamily="sans-serif"
                    android:textSize="66sp"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimary"
                    />

                <ImageButton
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_menu_send"
                    android:id="@+id/duaClick"
                    android:layout_width="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:text="@string/tahap2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textDua"
                    android:layout_weight="0.03"
                    android:textSize="36sp"
                    android:background="@color/colorPrimary"
                    android:lineSpacingExtra="8sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dua"
                    android:layout_toEndOf="@+id/dua" />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="5dp"
                android:layout_height="90dp">

                <TextView
                    android:text="3"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tiga"
                    android:layout_weight="0.03"
                    android:fontFamily="sans-serif"
                    android:textSize="66sp"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimary"
                    />

                <ImageButton
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_menu_send"
                    android:id="@+id/tigaClick"
                    android:layout_width="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:text="@string/tahap3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textTiga"
                    android:layout_weight="0.03"
                    android:textSize="36sp"
                    android:background="@color/colorPrimary"
                    android:maxWidth="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tiga"
                    android:layout_toEndOf="@+id/tiga" />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="5dp">

                <TextView
                    android:text="4"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/empat"
                    android:layout_weight="0.03"
                    android:fontFamily="sans-serif"
                    android:textSize="66sp"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimary"
                    />

                <ImageButton
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_menu_send"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/empatclick"
                    android:layout_alignParentBottom="true"
                    android:layout_width="70dp" />

                <TextView
                    android:text="@string/tahap4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textEmpat"
                    android:layout_weight="0.03"
                    android:textSize="36sp"
                    android:background="@color/colorPrimary"
                    android:lineSpacingExtra="8sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/empat"
                    android:layout_toEndOf="@+id/empat" />

            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:text="5"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/lima"
                    android:layout_weight="0.03"
                    android:fontFamily="sans-serif"
                    android:textSize="66sp"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimary"
                    />

                <ImageButton
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_menu_send"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageButton"
                    android:layout_alignParentBottom="true"
                    android:layout_width="70dp" />

                <TextView
                    android:text="@string/tahap5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="0.03"
                    android:textSize="36sp"
                    android:background="@color/colorPrimary"
                    android:lineSpacingExtra="8sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/lima"
                    android:layout_toEndOf="@+id/lima" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
